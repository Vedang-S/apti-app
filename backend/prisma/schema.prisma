generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id    String  @id @db.Uuid
  email String  @unique
  role Role    @default(USER)
  
  @@map("user") 
}

model Question {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  examId        String   @map("exam_id")
  topicId       String   @map("topic_id")
  subtopicId    String?  @map("subtopic_id")
  yearAsked     Int      @map("year_asked")
  questionText  String   @map("question_text") @db.Text
  optionA       String   @map("option_a")
  optionB       String   @map("option_b")
  optionC       String   @map("option_c")
  optionD       String   @map("option_d")
  correctAnswer String   @map("correct_answer") 
  solution      String   @map("solution") @db.Text 

  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("questions")
}